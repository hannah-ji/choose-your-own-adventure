def lunch_brynn():
    global relationship
    print("\n")
    print("After becoming fast friends, Brynn asks if you want to sit with her and her friends at lunch. Do you go?")
    print("1: Sure!")
    print("2: No thanks")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        points = "+5 relationship points"
        points_length = len(points) - 4
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        relationship = relationship +5
        lunch_brynn_cont()

    elif choice == '2':
        print("Brynn looks disappointed")
        print("\n")
        points = "-5 relationship"
        points_length = len(points) - 4
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        relationship = relationship - 5
        lunch_cont()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        lunch_brynn()   

