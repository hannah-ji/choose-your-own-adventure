def lunch_cont():
    print("\n")
    print("Where do you go at lunch?")
    print("1: Library")
    print("2: Gym")
    choice = input("Enter 1 or 2")

    if choice == '1':
        library()

    elif choice == '2':
        gym()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        lunch_cont()

def library():
    global grades, relationship
    print("\n")
    print("In the library, you see your old childhood friend, Lisa. She looks up and sees you.")
    print("1: Say hi")
    print("2: Ignore them and do your homework")
    choice = input("Enter 1 or 2")

    if choice == '1':
        library_2()

    elif choice == '2':
        print("\n")
        print("Lisa looks hurt that you've ignored her. You spend your time at the library catching up on homework.")
        points = "-5 relationship points, +5 grades"
        points_length = len(points) - 11
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        relationship = relationship - 5
        grades = grades + 5
        home()

    else:
        print("\n")
        print("Oops, enter 1 or 2")
        library()

def gym():
    global relationship
    print("\n")
    print("At the gym, you see your old friend, Sam. He looks up and waves at you.")
    print("1: Say hi")
    print("2: Ignore him")
    choice = input("Enter 1 or 2")

    if choice == '1':
        gym_2()

    elif choice == '2':
        print("\n")
        print("You avoid him. Sam looks hurt.")
        points = "-5 relationship points"
        points_length = len(points) - 5
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        relationship = relationship - 5
        home()

    else:
        print("\n")
        print("Oops, enter 1 or 2")
        gym()

def library_2():
    global friends, relationship, clubs
    print("\n")
    print("Lisa is glad to see you.")
    print("She says she and her friend Naomi are running the book club this year and needs members to join.")
    print("What do you say?")
    print("1: Sure, would love to")
    print("2: No thanks")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        print("Great, Lisa and Naomi are excited to have you join the book club.")
        points = "+2 friends, +15 relationship, +1 club"
        points_length = len(points) - 11
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        friends.append("Lisa")
        friends.append("Naomi")
        relationship = relationship + 15
        clubs.append("Book club")
        home()

    elif choice == '2':
        print("\n")
        print("Oh well, it was nice catching up.")
        points = "+1 friend"
        points_length = len(points) - 2
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        friends.append("Lisa")
        home()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        library_2()

