def home():
    print("\n")
    print("You're done at school and back at home.")
    print("You realize you have a very important test tomorrow and need to study.")
    print("1: Study now, you need to be prepared.")
    print("2: Don't study")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        print("You study and feel prepared for the test.")
        studied()

    elif choice == '2':
        print("\n")
        print("You decide to treat yourself to a day off.")
        no_study()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        home()

def studied():
    global grades
    print("\n")
    print("When you get to class, you're feeling confident.")
    print("Brianna, the person next to you asks to cheat off of your test.")
    print("You know that your teacher is very strict, so what do you do?")
    print("1: Say no, don't let them copy")
    print("2: Let them")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        print("You don't let Brianna cheat off of you.")
        print("Good choice, you get a good grade on the test!")
        grades = grades + 10
        points = "Gain 10 grade points"
        points_length = len(points) - 4
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grade12()

    elif choice == '2':
        study_cheat()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        studied()
    
def no_study():
    print("\n")
    print("You get to class and realize you might fail the test. What do you do?")
    print("1: Just do the test")
    print("2: Ask Brianna if you can cheat off of her")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        print("Better safe than sorry.")
        print("You didn't do so well on the test.")
        points = "Lose 5 grade points"
        points_length = len(points) - 5
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grade12()

    elif choice == '2':
        no_study_cheat()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        no_study()

def study_cheat():
    global favour, relationship, school
    print("\n")
    print("You agree.")
    print("It's halfway through the test before your teacher catches you.")
    print("Uh oh. He looks very mad. What do you say?")
    print("1: Take responsibility")
    print("2: Tell the truth")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        print("The teacher gives you a warning, but Brianna remembers what you did and owes you.")
        favour = True
        school = school - 10
        points = "+1 favour, -10 school standing"
        points_length = len(points) - 6
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grade12()

    elif choice == '2':
        print("\n")
        print("Brianna is very mad. You get a warning from your teacher.")
        points = "-5 relationship points, -5 school standing"
        points_length = len(points) - 4
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        relationship = relationship - 5
        grade12()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        study_cheat()

def no_study_cheat():
    global favour, relationship, school, grades
    print("\n")
    print("She agrees and lets you copy.")
    print("It's halfway through the test before your teacher catches you.")
    print("Uh oh. He looks very mad. What do you say?")
    print("1: Tell the teacher the truth")
    print("2: Lie and try to blame Brianna")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        print("The teacher gives you a 0. Brianna appreciates your honesty and will remember what you did.")
        favour = True
        grades = grades - 10
        school = school - 5
        points = "+1 favour, -10 grades, -5 school standing"
        points_length = len(points) - 5
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grade12()

    elif choice == '2':
        print("\n")
        print("Brianna is very mad. The teacher sees right through your lie and gives you a 0.")
        points = "-10 grades, -5 relationships, -10 school standing"
        points_length = len(points) - 12
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        relationship = relationship - 5
        grades = grades - 10
        school = school - 10
        grade12()

    else:
        print("/n")
        print("Oops, please enter 1 or 2")
        no_study_cheat()

def grade12():
    print("\n")
    print("Before you know it, you're in grade 12. It's the last year of high school!")
    print("First things first: you want to get a part time job to help save up for university or college.")
    print("There are 3 opportunities available:")
    print("\n")
    print("1: Hiring at the pool! Looking for qualified lifeguards and swim instructors:")
    print("- 15 hours/week")
    print("- $16/h")
    print("\n")
    print("2: Looking for energetic cashiers at Whole Foods:")
    print("- 18 hours/week")
    print("- $14/h")
    print("\n")
    print("3: Hiring at McDonaldsl! Need cashiers and cooks:")
    print("- 20 hours/week")
    print("- $13/h")
    print("\n")
    choice = input("Enter 1, 2, or 3")

    if choice == '1':
        pool_interview()

    elif choice == '2':
        whole_foods_interview()

    elif choice == '3':
        mcdonalds_interview()

    else:
        print("\n")
        print("Oops, please enter 1, 2 or 3")
        grade12()

def pool_interview():
    print("\n")
    print("Congrats! You got an interview for the position of a lifeguard.")
    print("At the interview, they ask you first aid questions.")
    print("They ask how many compressions and breaths you should give when doing CPR.")
    print("\n")
    print("1: 25 compressions, 1 breath")
    print("2: 30 compressions, 2 breaths")
    print("3: 20 compressions, 2 breaths")
    choice = input("Enter 1, 2, or 3")

    if choice == '1' or choice == '3':
        print("\n")
        print("Sorry, your answer was incorrect, you did not get the job.")
        grade12_2()

    elif choice == '2':
        pool_job()

    else:
        print("\n")
        print("Oops, please enter 1, 2, or 3")
        pool_interview()
    

def whole_foods_interview():
    print("\n")
    print("You got an interview offer at Whole Foods.")
    print("They ask you why you would be a good fit for the job.")
    print("How do you answer?")
    print("\n")
    print("1: I will provide excellent customer service through my friendly demeanor.")
    print("2: I can count change.")
    print("3: I am responsible and can work efficiently doing repetitive work.")
    choice = input("Enter 1, 2, or 3")

    if choice == '1' or choice == '3':
        whole_foods_job()

    elif choice == '2':
        print("\n")
        print("Sorry, you did not get the job.")
        grade12_2()

    else:
        print("\n")
        print("Oops, please enter 1, 2, or 3")
        whole_foods_interview()

def mcdonalds_interview():
    print("\n")
    print("You got an interview offer at McDonald's.")
    print("They ask you why they should hire you.")
    print("What do you say?")
    print("\n")
    print("1: I can perform well under stress and in a fast paced environment.")
    print("2: I am a quick learner and will perform the duties of my job to the highest standard.")
    print("3: I want the job so I can make money.")
    choice = input("Enter 1, 2, or 3")

    if choice == '1' or choice == '2':
        mcdonalds_job()

    elif choice == '3':
        print("\n")
        print("Sorry, you did not get the job.")
        grade12_2()

    else:
        print("\n")
        print("Oops, please enter 1, 2, or 3")
        mcdonalds_interview()
    
def pool_job():
    global lifeguard_job
    print("\n")
    print("Good job, you answered the question correctly!")
    print("Congrats, you got the job!")
    print("You will get paid $1152 per month")
    points = "+1 job"
    points_length = len(points) 
    print(points_length*"* ")
    print(points)
    print(points_length*"* ")
    lifeguard_job = True
    grade12_2()

