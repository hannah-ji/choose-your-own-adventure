def graduation():
    global name, grades, school, friends, clubs, relationship, money, grade_scholarship, people_scholarship

    #scholarships
    if grades >= 90:
        print("\n")
        print("Congrats, because of your stellar grades, you are eligble for the Presedent's Scholarship!")
        print("Scholarship Amount: $2500")
        grade_scholarship = True

    if relationship >= 90:
        print("\n")
        print("Congrats, your friends nominated you for the People's Scholarship!")
        print("Scholarship Amount: $2500")
        people_scholarship = True
    
    print("\n")
    print("You never thought this day would come.")
    print("It's graduation day, and you're finally done high school. It's been a long 4 years.")
    print("\n")
    choice = input("Enter 1 to see your summary.")

    if choice == '1':
        print("\n")
        print(f'Hello {name}, here\'s how you did:')

        print("*" *100)
        print("FUTURE")
        if science_uni == True:
            print("You decided to pursue Life Sciences at Queens University.")
            print("*" *100)

        elif science_college == True:
            print("You decided to pursue Sciences at Algonquin College.")
            print("*" *100)

        elif math_uni == True:
            print("You decided to pursue Mathematics at University of British Columbia.")
            print("*" *100)

        elif math_college == True:
            print("You decided to pursue Mathematics at Humber College.")
            print("*" *100)

        elif bus_uni == True:
            print("You decided to pursue business at Western Ivey.")
            print("*" *100)

        elif bus_college == True:
            print("You decided to pursue business at Sheridan College.")
            print("*" *100)

        elif work_after == True:
            print("You decided to take a break after graduating before looking for a job.")
            print("*" *100)

        print("GRADES")
        if grades >= 90:
            print(f'You were a star student, with a {grades/100*100:.0f}% average. You graduated top of your class!')
            print("*" *100)
            
        elif grades < 90 and grades >= 75:
            print(f'You were a good student, with a {grades/100*100:.0f}% average.')
            print("*" *100)
            
        elif grades < 75 and grades >= 65:
            print(f'You were a mediocre student, with a {grades/100*100:.0f}% average.')
            print("*" *100)

        else:
            print(f'You did not care for your grades, with a {grades/100*100:.0f}% average.')
            print("*" *100)
            
        print("SCHOOL STANDING")
        if school == 50:
            print("Your school reputation is pristine. Teachers loved you.")
            print("*" *100)

        elif school < 50 and school >= 35 :
            print("You had a few ups and downs, your school reputation was average.")
            print("*" *100)

        else:
            print("You caused a lot of trouble at school. The principal knows you by name.")
            print("*" *100)

        print("FRIENDS")
        if len(friends) == 0:
            print("You did not make any friends during high school.")
            print("*" *100)

        else:
            print("You made the following friends:")
            for friend in friends:
                print(f'- {friend}')
            print("*" *100)

        print("CLUBS")
        if len(clubs) == 0:
            print("You did not join any clubs.")
            print("*" *100)

        else:
            print("You joined the following clubs:")
            for club in clubs:
                print(f'- {club}')
            print("*" *100)

        print("RELATIONSHIPS")
        if relationship <= 100 and relationship >= 80:
            print("You were a people person. You always thought of your friends and family.")
            print(f'{relationship}/100 relationship points')
            print("*" *100)

        elif relationship < 80 and relationship >= 75:
            print("You had good relationships with your friends and family.")
            print(f'{relationship}/100 relationship points')
            print("*" *100)
            
        elif relationship < 75 and relationship >= 65:
            print("You had mediocre relationships with your friends and family.")
            print(f'{relationship}/100 relationship points')
            print("*" *100)
        else:
            print("You did not have a good relationship with your friends and family.")
            print(f'{relationship}/100 relationship points')
            print("*" *100)

        print("MONEY")
        print(f'You have ${money} saved in your bank account.')
        print("*" *100)

        print("SCHOLARSHIPS")
        if grade_scholarship == True:
            print("- President's Scholarship: $2500")
            print("*" *100)

        if people_scholarship == True:
            print("- People's Scholarship: $2500")
            print("*" *100)
            
        if people_scholarship == False and grade_scholarship == False:
            print("No scholarships awarded")
            print("*" *100)

        end_game()
    else:
        print("\n")
        print("Oops, please enter 1")
        graduation()

def end_game():
    global name, grades, school, friends, clubs, favour, relationship, lifeguard_job, grocery_job, mcd_job, money
    global math_uni, math_college, science_uni, science_college, bus_uni, bus_college, work_after
    print("\n")
    print("Play again?")
    print("1: Yes")
    print("2: No thanks, I'm done")
    choice = input("Enter 1 or 2: ")

    if choice == '1':
        print("\n")
        name = [ ]
        grades = 55
        school = 50
        friends = [ ]
        relationship = 65
        clubs = [ ]
        favour = False
        lifeguard_job = False
        grocery_job = False
        mcd_job = False
        money = 0
        math_uni = False
        math_college = False
        science_uni = False
        science_college = False
        bus_uni = False
        bus_college = False
        work_after = False
        grade_scholarship = False
        people_scholarship = False
        intro()

    elif choice == '2':
        print("\n")
        print("Game over.")
        print("Thanks for playing, hope you enjoyed!")

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        end_gam()
        
#main
global name, grades, school, friends, clubs, favour, relationship, lifeguard_job, grocery_job, mcd_job, money
global math_uni, math_college, science_uni, science_college, bus_uni, bus_college, work_after, grade_scholarship, people_scholarship
name = [ ]
grades = 55
school = 50
friends = [ ]
relationship = 65
clubs = [ ]
favour = False
lifeguard_job = False
grocery_job = False
mcd_job = False
money = 0
math_uni = False
math_college = False
science_uni = False
science_college = False
bus_uni = False
bus_college = False
work_after = False
grade_scholarship = False
people_scholarship = False
intro()
