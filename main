def intro():
    global name, school
    print("Welcome to high school! You are the class of 2024. Your goal is to graduate high school.")
    name = input("Enter your name: ")
    print("\n")
    print(f'Hi {name}! It is the first day of school. You are already running late.')
    print("1: Run to school")
    print("2: Beg your older brother to drive you")
    print("3: Take your time and walk to school.")
    intro_choice = input("Enter 1, 2, or 3")
    
    if intro_choice == '1':
        print("\n")
        print("You rush out the door and run to school You made it to first period just on time!")
        first_day_school()
        
    elif intro_choice == '2':
        print("\n")
        print("Your brother looks annoyed and rolls his eyes. You get to school on time.")
        first_day_school()
        
    elif intro_choice == '3':
        print("\n")
        print("You leisurely walk to school and are 20 minutes late. You make a bad impression on your first period teacher.")
        points = "-10 school standing"
        points_length = len(points)-4
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        school = school -10
        first_day_school()
        
    else:
        print("\n")
        print("Oops, enter a number 1, 2, or 3")
        intro()

def first_day_school():
    print("\n")
    print("Looking around the room, you have to decide where to sit.")
    print("1: Next to Brynn at the front,")
    print("2: Next to Tristan, in the middle,")
    print("3: Or at the back, next to Natalie?")
    sit = input("Enter 1 for front, enter 2 for middle, or enter 3 for back")

    if sit == '1':
        print("\n")
        print("Brynn introduces herself. She is:")
        print("- Captain of the cheer team")
        print("- Very studious and focused on grades")
        print("- Likes to bake a lot and brings food to school everyday")
        confirm_brynn()

    elif sit == '2':
        print("\n")
        print("Tristan introduces himself. He:")
        print("- Wants to become a professional basketball player")
        print("- Has two younger sisters and lives with his mom")
        print("- Chatty and outgoing")
        confirm_tristan()
    
    elif sit == '3':
        print("\n")
        print("Natalie introduces herself. She:")
        print("- Is always listening to music")
        print("- Owns a pet snake")
        print("- Is very honest and upfront")
        confirm_natalie()

    else:
        print("\n")
        print("Oops, please enter 1, 2, or 3")
        first_day_school()

def confirm_brynn():
    global friends
    print("\n")
    print("Are you happy with your choice?")
    print("1: Yes, I want to sit here")
    print("2: No, go back")
    confirm = input("Enter 1 or 2")

    if confirm == '1':
        print("\n")
        points = "You made 1 friend: Brynn"
        points_length = len(points) - 4
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        friends.append("Brynn")
        lunch_brynn()
        
    elif confirm == '2':
        first_day_school()
        
    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        confirm_brynn()
        
