def lunch_tristan_cont():
    global friends, relationship, clubs
    print("\n")
    print("It's lunch time and you meet Tristan's friends: Carla and Nathan.")
    print("They ask you if you want to join the basketball team with them. What do you say?")
    print("1: Yes!")
    print("2: No thanks")
    choice = input("Enter 1 or 2")

    if choice == '1':
        print("\n")
        print("Tristan, Carla, and Nathan are happy that you joined!")
        points = "+2 friends, +1 club, +15 friendship points"
        points_length = len(points) - 12
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        friends.append("Carla")
        friends.append("Nathan")
        clubs.append("Basketball team")
        relationship = relationship + 15
        home()

    elif choice == '2':
        print("\n")
        print("Oh well, maybe next time. Tristan, Carla, and Nathan look disappointed.")
        points = "-5 relationship points"
        points_length = len(points) - 6
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        relationship = relationship - 5
        home()

    else:
        print("\n")
        print("Oops, please enter 1 or 2")
        lunch_tristan_cont()

