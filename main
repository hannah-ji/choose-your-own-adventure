def math_path2():
    global grades
    print("\n")
    choice = input("You have (1) unread email. Press 1 to open.")

    if choice == '1':
        if grades >= 80:
            math_uni_accept()
        else:
            print("\n")
            print("We regret to inform you that you have been rejected from UBC mathematics.")
            print("Oh no, you were rejected from your first choice. It's okay, keep waiting.")
            math_email2()

    else:
        print("\n")
        print("Oops, please enter 1")
        math_path2()

def math_uni_accept():
    global name, math_uni
    print("\n")
    print(f'Congratulations {name}! We were very impressed with your application.')
    print("You are accepted to University of British Columbia Mathematics!")
    print("\n")
    print("Wow, you were accepted to your top choice! Accept the offer?")
    print("1: Yes")
    print("2: No")
    choice = input("Enter 1 or 2")

    if choice == '1':
        math_uni = True
        graduation()

    elif choice == '2':
        math_email2()

    else:
        print("\n")
        print("Oops, enter 1 or 2")
        math_uni_accept()

