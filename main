def grade12_2():
    global favour, relationship, grades
    print("\n")
    print("Things are picking up. You're trying to balance school and time with your family.")
    print("You also realize that you need 20 more hours of volunteering to graduate!")
    print("These hours are due by the end of the week. Uh oh.")
    print("You have a big test, your brother's birthday, and 20 hours of volunteering to do.")
    print("\n")
    print("What do you do?")
    print("1: Skip out on your brother's birthday and study for your test.")
    print("2: Celebrate your brother's birthday and don't study for your test.")
    print("3: Wait, I think I have a favour from someone.")
    choice = input("Enter 1, 2, or 3")

    if choice == '1':
        print("\n")
        print("You miss celebrating you brother's birthday. He's disappointed that you didn't come.")
        print("You spend your weekend volunteering and studying for your test.")
        points = "-5 relationship points, +15 grades"
        points_length = len(points) - 8
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grades = grades + 15
        relationship = relationship - 5
        pay1()

    elif choice == '2':
        print("\n")
        print("You have a good time celebrating your brother's birthday. You also spend your weekend getting your 20 hours of volunteering.")
        print("When you write the test on Monday, you don't do so well.")
        points = "-5 grades, +15 relationship points"
        points_length = len(points) - 8
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grades = grades - 5
        relationship = relationship + 15
        pay1()

    elif choice == '3':
        if favour == True:
            get_favour()

        else:
            print("\n")
            print("Sorry, you don't have a favour.")
            grade12_2()

    else:
        print("\n")
        print("Oops, please enter 1, 2, or 3")
        grade12_2()

def get_favour():
    global grades, relationship
    print("\n")
    print("Right, Brianna remembers that she owes you a favour.")
    print("She runs the local food bank and manages volunteers. She says that she can write you the 20 hours now, so you can hand them in and be able to graduate.")
    print("You can volunteer later when you're less busy.")
    print("You have time to celebrate your brother's birthday and study for your test!")
    print("\n")
    points = "+15 grades, +15 relationship points"
    points_length = len(points) - 8
    print(points_length*"* ")
    print(points)
    print(points_length*"* ")
    grades = grades + 15
    relationship = relationship + 15
    pay1()

def pay1():
    global lifeguard_job, grocery_job, mcd_job, money
    if lifeguard_job == True:
        print("\n")
        print("It's pay day!")
        points = "+$1152"
        points_length = len(points) 
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        money = money + 1152
        choose_path()

    elif grocery_job == True:
        print("\n")
        print("It's pay day!")
        points = "+$1008"
        points_length = len(points) 
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        money = money + 1008
        choose_path()

    elif mcd_job == True:
        print("\n")
        print("It's pay day!")
        points = "+$936"
        points_length = len(points) 
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        money = money + 936
        choose_path()

    else:
        choose_path()
        
def choose_path():
    print("\n")
    print("It's time to choose what to go into. You're deciding between math, science, and business.")
    print("1: Math")
    print("2: Science")
    print("3: Business")
    choice = input("Enter 1, 2, or 3")

    if choice == '1':
        math_path()

    elif choice == '2':
        science_path()

    elif choice == '3':
        business_path()

    else:
        print("\n")
        print("Oops, enter 1, 2, or 3")
        choose_path()

def math_path():
    global grades
    print("\n")
    print("You take all the necessary math courses. You're hoping to get high enough grades to get into university.")
    print("On the final exam, your stuck on this question:")
    print("\n")
    print("A school committee consists of 2 teachers and 4 students. The number of different committees that can be formed from 5 teachers and 10 students is:")
    print("1: 200")
    print("2: 2100")
    print("3: 15")
    choice = input("Enter 1, 2, or 3")

    if choice == '1' or choice == '3':
        print("\n")
        print("Oh no, you got the answer wrong. That's okay, you still did well on the rest of your exam.")
        print("It's time to apply to college and university.")
        points = "+5 grades"
        points_length = len(points) 
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grades = grades + 5
        pay_math()

    elif choice == '2':
        print("\n")
        print("You got the answer right! You did really well on your exam.")
        print("It's time to apply to college and university.")
        points = "+15 grades"
        points_length = len(points) 
        print(points_length*"* ")
        print(points)
        print(points_length*"* ")
        grades = grades + 15
        pay_math()

    else:
        print("\n")
        print("Oops, please enter 1, 2, or 3")
        math_path()

